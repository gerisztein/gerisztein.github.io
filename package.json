{
  "name": "lucasg.com.br",
  "version": "1.0.0",
  "description": "Lucas Gerisztein's Portfolio",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass --output-style compressed --include-path css src/assets/sass/main.sass www/assets/main.css",
    "build-fonts": "cp -r ./src/assets/font ./www/assets/font",
    "build-html": "html-minifier -o ./www/index.html ./src/html/index.html --remove-comments --collapse-whitespace",
    "build-images": "cp -r ./src/assets/images ./www/assets/images && cp ./src/favicon.ico ./www/favicon.ico",
    "build-js": "concat-cli -f ./src/assets/js/*.js -o ./www/assets/main.js && uglifyjs ./www/assets/main.js --mangle --compress",
    "build-server": "npm run build",
    "build-watch": "npm run watch-css & npm run watch-fonts & npm run watch-html & npm run watch-images",
    "build": "npm run build-html && npm run build-css && npm run build-images && npm run build-fonts && npm run build-js",
    "watch-css": "watch 'npm run build-css' ./src/assets/sass",
    "watch-fonts": "watch 'npm run build-fonts' ./src/assets/font",
    "watch-html": "watch 'npm run build-html' ./src/html",
    "watch-images": "watch 'npm run build-images' ./src/assets/images",
    "watch-js": "watch 'npm run build-js' ./src/assets/js",
    "watch": "watch 'npm run build' ./src & npm run server",
    "server": "live-server ./www --wait=1000 --host=0.0.0.0",
    "start": "npm run clean && npm run watch",
    "clean": "rm -rf www",
    "postclean": "mkdir www && mkdir www/assets"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gerisztein/lucasg.com.br.git"
  },
  "keywords": [
    "lucas",
    "gerisztein",
    "frontend",
    "developer",
    "web",
    "mobile",
    "curriculum",
    "portfolio"
  ],
  "author": "Lucas Gerisztein",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gerisztein/lucasg.com.br/issues"
  },
  "homepage": "https://github.com/gerisztein/lucasg.com.br",
  "devDependencies": {
    "concat-cli": "^4.0.0",
    "html-minifier": "^1.3.0",
    "live-server": "^0.9.2",
    "node-sass": "^3.4.2",
    "uglify-js": "^2.6.2",
    "watch": "^0.17.1"
  }
}
